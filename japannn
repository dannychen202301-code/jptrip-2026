    <script>
        const { createApp, ref, computed } = Vue;

        createApp({
            setup() {
                const activeTab = ref('schedule');
                
                const currentTitle = computed(() => {
                    const titles = { schedule: '今日行程', map: '周邊地圖', ledger: '收支統計', shopping: '採買清單' };
                    return titles[activeTab.value];
                });

                const schedule = ref([
                    { time: '09:00', event: '晨間瑜珈', location: '社區公園' },
                    { time: '14:30', event: '設計會議', location: '線上會議室' },
                    { time: '19:00', event: '朋友聚餐', location: '森林系餐廳' }
                ]);

                const expenses = ref([
                    { id: 1, category: '午餐外食', amount: 180, date: '2023-10-27' },
                    { id: 2, category: '交通儲值', amount: 500, date: '2023-10-27' }
                ]);

                const shoppingList = ref([
                    { id: 1, name: '燕麥奶', done: false },
                    { id: 2, name: '全麥麵包', done: true },
                    { id: 3, name: '香氛蠟燭', done: false }
                ]);

                return { activeTab, currentTitle, schedule, expenses, shoppingList };
            }
        }).mount('#app');
    </script>
